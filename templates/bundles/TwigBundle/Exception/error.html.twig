{% extends "base.html.twig" %}

{% block style %}
  <link rel="stylesheet" href="{{ asset('assets/css/error.css') }}">
{% endblock %}

{% block header %}{% endblock %}

{% block title %}We crashed, captain!{% endblock %}

{% block body %}

<section class="bg-purple">
  <img src="{{ asset('assets/images/interface/errors/background.gif') }}" id="background" />
  <div class="stars">
    <div class="central-body">
      <img class="image-404" src="http://salehriaz.com/404Page/img/404.svg" />
      <a href="{{ path('admin_head') }}" class="btn-go-back">Back to the control center</a>
    </div>
    <div class="objects">
      <img class="object_rocket" src="{{ asset('assets/images/interface/errors/rocket.png') }}" width="100px" />
      <div class="earth-moon">
        <img class="object_earth" src="{{ asset('assets/images/interface/errors/earth.png') }}" width="120px" />
        <img class="object_moon" src="{{ asset('assets/images/interface/errors/moon.png') }}" width="30px" />
      </div>
      <div class="box_astronaut">
        <img class="object_astronaut" src="{{ asset('assets/images/interface/errors/astronaut.png') }}" width="250px" />
      </div>
    </div>
    <div class="glowing_stars">
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
    </div>
  </div>
</section>

{% endblock %}

{% block javascripts %}
  <script src="{{ asset('assets/js/index.js') }}" type="text/javascript"></script>
{% endblock %}